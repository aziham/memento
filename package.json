{
  "name": "memento",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun run --hot src/index.ts 2>&1 | grep -v 'Started development server'",
    "start": "bun run src/index.ts 2>&1 | grep -v 'Started development server'",
    "test": "bun test",
    "check": "bun run check:biome && bun run check:prettier && bun run typecheck",
    "check:biome": "bunx biome check --write .",
    "check:prettier": "bunx prettier --write \"**/*.{md,yml,yaml}\"",
    "typecheck": "bun run --bun tsc --noEmit"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "3.0.2",
    "@ai-sdk/cohere": "3.0.2",
    "@ai-sdk/google": "3.0.2",
    "@ai-sdk/mistral": "3.0.2",
    "@ai-sdk/openai": "3.0.2",
    "@ai-sdk/openai-compatible": "2.0.2",
    "@modelcontextprotocol/sdk": "1.25.1",
    "ai": "6.0.6",
    "hono": "4.11.3",
    "neo4j-driver": "6.0.1",
    "zod": "4.3.4"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@types/bun": "latest",
    "lefthook": "2.0.13",
    "prettier": "3.7.4",
    "typescript": "5.9.3"
  }
}
